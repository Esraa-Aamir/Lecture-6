#include<iostream>
using namespace std;
int main()
{
	int x;
	cout << "Enter a number to check whether its negative or positive. " << endl;
	cin >> x;

	if (x < 1)
	
	{
		cout << " The number you have entered is negative. " << endl;
	}
	else if ( x >= 1)
	{
		cout << " The number you have entered is positive." << endl;

	}
	else
	{
		cout << " You have entered an incorrect value." << endl;
	}
	return 0;
}
